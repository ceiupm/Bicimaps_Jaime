<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osmdroid.Bluetooth.BluetoothActivity">

    <TextView android:id="@+id/bt_activity_title"
        android:layout_width="327dp"
        android:layout_height="74dp"
        android:layout_above="@+id/lst_BTDevices"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:text="@string/Titulo_BT"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lst_BTDevices"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/btn_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="10dp"
        android:text="Buscar"
        android:background="@drawable/rounded_corners"/>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="50dp"
        android:text="Conectar"
        android:background="@drawable/rounded_corners" />



</RelativeLayout>