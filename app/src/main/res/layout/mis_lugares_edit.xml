<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de lugar"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>
    <Spinner
        android:id="@+id/placeTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del lugar"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/place_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nombre del lugar"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dirección del lugar"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/place_address_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce nueva dirección"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"/>
    <Button
        android:id="@+id/savePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Guardar"/>

</LinearLayout>